<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/simple_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This should be replaced on create..." />

        <TextView
            android:id="@+id/pw_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No password checks yet."/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <EditText
                android:id="@+id/pw_entry"
                android:layout_width="262dp"
                android:layout_height="wrap_content"
                android:hint="password" />

            <Button
                android:id="@+id/pw_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check Password" />
        </LinearLayout>

        <TextView
            android:id="@+id/kv_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No key/value operations yet."/>

        <EditText
            android:id="@+id/kv_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="key"/>

        <EditText
            android:id="@+id/kv_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="value"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/read_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Read"/>

            <Button
                android:id="@+id/write_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Write"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>